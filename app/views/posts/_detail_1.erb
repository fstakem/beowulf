<div class="row post-detail-row">

  <div class="col-sm-9 col-md-9 col-lg-9">
    <%= post.text %>
  </div>

  <div class="col-sm-3 col-md-3 col-lg-3">
    <% if post.grouped_photos.count > 0 %>
      <div class="post-all-photos">
        <% post.grouped_photos.each_with_index do |photo_group, group_index| %>
          <%= render 'photo_row',    photo_group: photo_group, group_index: group_index %>
        <% end %>
      </div>
    <% end %>
  </div>

</div>