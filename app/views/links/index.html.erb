
<div class="row links-row">

  <div class="col-sm-8 col-md-8 col-lg-8">
    <div class="row links-title-row">
      <div class="col-sm-2 col-md-2 col-lg-2"></div>
      <div class="col-sm-10 col-md-10 col-lg-10 text-right ">
        <h1 class="links-title">Links</h1>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-4 col-md-4 col-lg-4"></div>

      <div class="col-sm-8 col-md-8 col-lg-8">
        <div class="text-right">
          <% @links.each_with_index do |link, index| %>
            <div class="user-link-content">
              <a class="user-link" href="<%= link.url %>"><%= link.text %></a>
            </div>
          <% end %>
        </div>
      </div>

    </div>
  </div>

  <div class="col-sm-4 col-md-4 col-lg-4">
    <svg width="140" height="600">
      <line x1="0" y1="0" x2="0" y2="500" style="stroke:rgb(51,51,51);stroke-width:6" />

      <g stroke="rgb(203, 67, 67)" stroke-width="2">
        <line x1="80" y1="40" x2="120" y2="40" />
        <line x1="100" y1="10" x2="100" y2="70" />

        <line x1="90" y1="30" x2="110" y2="50" />
        <line x1="110" y1="30" x2="90" y2="50" />
      </g>

      <g stroke="rgb(0, 113, 138)" stroke-width="2" transform="translate(-33, 25)">
        <line x1="80" y1="40" x2="120" y2="40" />
        <line x1="100" y1="10" x2="100" y2="70" />

        <line x1="90" y1="30" x2="110" y2="50" />
        <line x1="110" y1="30" x2="90" y2="50" />
      </g>
    </svg>
  </div>
</div>



