<div class="row resume-section-row">

  <div class="row sub-title-row">
    <div class="col-sm-1 col-md-1 col-lg-1 sub-title-bar">
      <hr />
    </div>

    <div class="col-sm-10 col-md-10 col-lg-10">
      <h3>Work</h3>
    </div>
  </div>

  <% @jobs.each do |job| %>
    <div class="row resume-subsection-row">
      <div class="col-sm-1 col-md-1 col-lg-1 resume-date" style="width:120px">
        <%= job.start_date.strftime('%m/%y') unless job.start_date.nil? %>-<%= job.end_date.strftime('%m/%y') unless job.end_date.nil? %>
      </div>

      <div class="col-sm-10 col-md-10 col-lg-10">
        <b><%= job.title %></b>, <i><%= job.company %></i>, <%= job.city %>.
      </div>
    </div>
  <% end %>

</div>





