<div class="row project-detail-row">

  <div class="col-sm-9 col-md-9 col-lg-9">
    <%= project.long_description %>
  </div>

  <div class="col-sm-3 col-md-3 col-lg-3">
    <% if project.grouped_photos.count > 0 %>
      <div class="project-all-photos">
        <% project.grouped_photos.each_with_index do |photo_group, group_index| %>
          <%= render 'photo_row',    photo_group: photo_group, group_index: group_index %>
        <% end %>
      </div>
    <% end %>
  </div>

</div>